{
  "name": "ts-api-server",
  "version": "0.0.1",
  "description": "Boilerplate project for a TypeScript API (Express, tsoa, swagger + UI)",
  "repository": "https://github.com/riazXrazor/ts-api-server",
  "author": "Riaz Laskar <riazcool77@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "link-module-alias",
    "preinstall": "command -v link-module-alias && link-module-alias clean || true",
    "start": "ts-node -P tsconfig-base.json ./dev/start.ts",
    "build:api": "npm tsc -p ./api/tsconfig.json",
    "start:api": "npm build:api && npm tsoa:gen && node ./api/dist/start-server.js",
    "tsoa:gen": "npm tsoa swagger -c ./api/tsoa.json && npm tsoa routes -c ./api/tsoa.json",
    "typeorm": "ts-node -P ./api/tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:migrate": "ts-node -P ./tsconfig-base.json ./dev/db/migrate.ts",
    "db:update": "npm run typeorm migration:run",
    "test": "cross-env TS_NODE_PROJECT=./api/tsconfig.json mocha -t 15000 -r ts-node/register \"./api/**/*.spec.ts\""
  },
  "_moduleAliases": {
    "#apiDir": "./api",
    "#devDir": "./dev",
    "#controllers": "./api/controllers",
    "#models": "./api/models",
    "#config": "./api/config",
    "#utils": "./api/utils"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "node-input-validator": "^3.6.4",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.0.7",
    "tsoa": "^2.3.81",
    "typeorm": "^0.2.16"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^2.1.3",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/ioredis": "^4.0.10",
    "@types/method-override": "^0.0.31",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/readline-sync": "^1.4.3",
    "@types/superagent": "^4.1.1",
    "@types/swagger-ui-express": "^3.0.1",
    "@types/webpack": "^4.4.27",
    "@types/webpack-dev-server": "^3.1.5",
    "chai": "^4.2.0",
    "chokidar": "^2.1.5",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "keypress": "^0.2.1",
    "link-module-alias": "^1.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "minimatch": "^3.0.4",
    "mocha": "^6.0.2",
    "node-sass": "^4.13.1",
    "readline-sync": "^1.4.9",
    "sass-loader": "^7.1.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.4.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "resolutions": {
    "@types/webpack": "4.4.27"
  }
}
